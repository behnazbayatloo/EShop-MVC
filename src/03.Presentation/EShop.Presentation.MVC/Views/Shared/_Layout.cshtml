<!doctype html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Store</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">فروشگاه</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-area ="" asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Product" asp-controller="AddToBasket" asp-action="Index">مشاهده سبد خرید</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Customer" asp-controller="Checkout" asp-action="Index">تسویه حساب</a></li>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        if(User.IsInRole("Admin"))
                         {
                            <li class="nav-item"><a class="nav-link" href="/checkout">داشبورد</a></li>


                        }
                        else if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item"><a class="nav-link"asp-area="Customer" asp-controller="Profil" asp-action="Index">پروفایل</a></li>
                            <li class="nav-item"><a class="nav-link"asp-area="Customer" asp-controller="ShowOrder" asp-action="Index">مشاهده سفارش‌ها</a></li>

                        } 
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-2">سلام، @User.Identity!.Name</span>
                        </li>
                        <li class="nav-item">
                            <form class="d-inline" method="post" asp-area="Identity" asp-page="/Login/Login" asp-page-handler="Logout">
                                <button class="btn btn-outline-light btn-sm" >خروج</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Login/Login">ورود</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Login/Register" >ثبت‌نام</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>
    
    <main class="container py-4">
        @RenderBody()
    </main>
   
    
    <footer class="border-top bg-white">
        <div class="container py-3 small text-muted">
            © @DateTime.Now.Year - Store
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>