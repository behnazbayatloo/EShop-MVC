@using EShop.Presentation.MVC.Areas.Customer.Models
@model ChangeLastNameViewModel

@{
    ViewData["Title"] = " تغییر نام خانوادگی";
}

<h2>تغییر نام خانوادگی</h2>

<form asp-action="ChangeLastName" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">ثبت تغییر</button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}