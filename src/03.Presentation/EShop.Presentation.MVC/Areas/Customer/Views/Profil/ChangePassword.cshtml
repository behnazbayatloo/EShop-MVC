@using EShop.Presentation.MVC.Areas.Customer.Models
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر پسورد";
}

<h2>تغییر پسورد</h2>

<form asp-action="ChangePassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.CurrentPass"></label>
        <input asp-for="@Model.CurrentPass" class="form-control" />
        <span asp-validation-for="@Model.CurrentPass" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.NewPass"></label>
        <input asp-for="@Model.NewPass" class="form-control" />
        <span asp-validation-for="@Model.NewPass" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ConfirmPass"></label>
        <input asp-for="@Model.ConfirmPass" class="form-control" />
        <span asp-validation-for="@Model.ConfirmPass" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ثبت تغییر</button>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}