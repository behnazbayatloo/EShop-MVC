@model BasketViewModel

@{
    ViewData["Title"] = "تسویه حساب";
}

<h2>سبد خرید</h2>


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model.BasketItems != null && Model.BasketItems.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>نام محصول</th>
                <th>قیمت</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BasketItems)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price.ToString("N0") تومان</td>
                    <td>
                        <form asp-action="Remove" asp-route-itemid="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <strong>جمع کل: </strong> @Model.TotalPrice.ToString("N0") تومان
    </div>

    <a asp-area="Customer" asp-controller="Checkout" asp-action="Checkout" class="btn btn-dark mt-3">پراخت</a>
}
else
{
    <p>سبد خرید شما خالی است.</p>
}
