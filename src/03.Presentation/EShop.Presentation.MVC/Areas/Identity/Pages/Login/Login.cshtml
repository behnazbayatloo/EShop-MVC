@page
@model EShop.Presentation.MVC.Areas.Identity.Pages.Login.LoginModel

@{
    ViewData["Title"] = "ورود";
}

<h5 class="mb-3">ورود</h5>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
            <label asp-for="Input.Email"  class="form-label">ایمیل</label>
            <input class="form-control" asp-for="Input.Email"  placeholder="email@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">رمز عبور</label>
            <input class="form-control" asp-for="Input.Password" placeholder="******" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">مرا به خاطر بسپار</label>
    </div>
        <input type="hidden" asp-for="ReturnUrl" />
    <button class="btn btn-dark w-100" type="submit">ورود</button>

    <div class="mt-3 small">
        حساب ندارید؟ <a asp-area="Identity" asp-page="/Login/Register" >ثبت‌نام</a>
    </div>
</form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }