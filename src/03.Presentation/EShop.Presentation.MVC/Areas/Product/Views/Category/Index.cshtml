@model HomeIndexViewModel
@{
    ViewData["Title"] = Model.CategoryName ;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <!-- ستون محصولات -->
        <main class="col-12 col-lg-9">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0">محصولات</h5>
                <form class="d-flex gap-2" method="get" action="/">
                    <input class="form-control" name="q" placeholder="جستجو..." />
                    <button class="btn btn-dark">جستجو</button>
                </form>
            </div>

            <div class="row g-3">
                @foreach (var pr in Model.Products)
                {
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="card h-100">
                            <img class="card-img-top" style="height:160px;object-fit:cover"
                                 src="@(pr.ImageUrl ?? $"https://picsum.photos/seed/p@i/600/400")" alt="@pr.Title" />
                            <div class="card-body">
                                <div class="fw-bold">@pr.Title</div>
                                <div class="text-muted small">@pr.Description</div>
                                <div class="mt-2 fw-bold">@pr.Price.ToString()</div>
                            </div>
                            <div class="card-footer bg-white d-flex justify-content-between">
                                <a class="btn btn-outline-dark btn-sm"
                                   asp-area="Product"
                                   asp-controller="Product"
                                   asp-action="Index"
                                   asp-route-id="@pr.Id">جزئیات</a>
                                @* دکمه افزودن به سبد خرید *@
                                @if (pr.Stock > 0)
                                {
                                    <form asp-area="Product" asp-controller="AddToBasket" asp-action="Add" method="post" class="m-0"> 
                                        <input type="hidden" asp-for="BasketItem.ProductId" value="@pr.Id" />
                                        <input type="number" asp-for="BasketItem.Quantity" class="form-control" value="1" min="1" />
                                        <input type="hidden" asp-for="BasketItem.UnitPrice" value="@pr.Price" />
                                        <input type="hidden" asp-for="BasketItem.Title" value="@pr.Title" />
                                        <button type="submit" class="btn btn-dark btn-sm">افزودن به سبد</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">ناموجود</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>

        <!-- ستون دسته‌بندی‌ها (سمت راست) -->
        <aside class="col-12 col-lg-3">
            <div class="card">
                <div class="card-header bg-white fw-bold">دسته‌بندی‌ها</div>
                <div class="list-group list-group-flush">
                    <ul class="list-group">
                        @foreach (var cat in Model.Categories)
                        {
                            <li class="list-group-item">
                                <a asp-area="Product"
                                   asp-controller="Category"
                                   asp-action="Index"
                                   asp-route-categoryId="@cat.Id">
                                    @cat.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </aside>
    </div>



